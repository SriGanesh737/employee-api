// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Employees {
  id                  Int       @id @default(autoincrement())
  fullName            String
  jobTitle            String
  phoneNumber         String
  email               String
  address             String
  city                String
  state               String
  primaryContactId    Int?       @unique
  secondaryContactId  Int?       @unique

  primaryContact      EmergencyContacts?  @relation("PrimaryContact", fields: [primaryContactId], references: [id])
  secondaryContact    EmergencyContacts?  @relation("SecondaryContact", fields: [secondaryContactId], references: [id])
}

model EmergencyContacts {
  id           Int      @id @default(autoincrement())
  name         String
  phoneNumber  String
  relationship String
  primary      Employees?  @relation("PrimaryContact")
  secondary    Employees?  @relation("SecondaryContact")
}


